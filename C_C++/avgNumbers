#include <stdio.h>

/**
* avgNumbers - function to find average of 3 numbers
* 
* Return: Always 0.
*/

int avgNumbers(int a, int b, int c)
{
	int avg;
	avg = (a + b + c) / 3;
	return(avg);
}

int main(void)
{
	int n1, n2, n3, average;
	printf("Enter three integers: ");
	scanf("%d %d %d", &n1, &n2, &n3);
	
	average = avgNumbers(n1, n2, n3);
	printf("Average of 3 numbers = %d", average);
	return(0);
}