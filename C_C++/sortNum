#include <stdio.h>

/**
* sortNum - function to find max and min between two numbers
* Return: Always 0.
*/

float sortNum(float a, float b)
{
	if(a > b)
		return(1);
	else
		return(0);
}

int main(void)
{
	float x, y, cmpr;
	printf("Enter two numbers: ");
	scanf("%f %f", &x, &y);
	
	cmpr = sortNum(x, y);
	if(cmpr == 1)
		printf("x = %.2f is the maximum and y = %.2f is the minimum.", x, y);
	
	else
		printf("x = %.2f is the minimum and y = %.2f is the maximum.", x, y);
		return(0);
}